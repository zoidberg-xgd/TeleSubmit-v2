[BOT]
# Telegram Bot Token (从 @BotFather 获取)
TOKEN = your_bot_token_here

# 频道 ID (格式: @channel_username 或 -100xxxxxxxxxx)
CHANNEL_ID = @your_channel

# 数据库文件路径
DB_PATH = data/submissions.db

# 会话超时时间（秒）
TIMEOUT = 300

# 允许的最大标签数量
ALLOWED_TAGS = 30

# 机器人所有者的 Telegram User ID
OWNER_ID = your_user_id

# 是否在投稿中显示投稿人信息 (true/false)
SHOW_SUBMITTER = true

# 是否向所有者发送新投稿通知 (true/false)
NOTIFY_OWNER = true

# 机器人模式: MEDIA (仅媒体), DOCUMENT (仅文档), MIXED (混合模式)
BOT_MODE = MIXED

# 允许上传的文档文件类型（MIME类型或文件扩展名，逗号分隔）
# 留空或设为 * 表示允许所有类型
# 示例1 - 小说类: ALLOWED_FILE_TYPES = .txt,.epub,.mobi,.azw3,.pdf
# 示例2 - 压缩包: ALLOWED_FILE_TYPES = .zip,.rar,.7z,.tar,.gz
# 示例3 - Office文档: ALLOWED_FILE_TYPES = .doc,.docx,.xls,.xlsx,.ppt,.pptx,.pdf
# 示例4 - 使用MIME类型: ALLOWED_FILE_TYPES = application/pdf,application/zip
# 示例5 - 允许所有: ALLOWED_FILE_TYPES = *
ALLOWED_FILE_TYPES = *

[SEARCH]
# 搜索索引目录
INDEX_DIR = data/search_index

# 是否启用搜索功能
ENABLED = true
